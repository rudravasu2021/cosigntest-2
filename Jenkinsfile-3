pipeline {
  agent {
      label 'Node1'
  }
  environment {
    IMAGE_NAME='rudravasu2021/cosigntest-v2'
    IMAGE_VERSION='2.2'
    COSIGN_PUBLIC_KEY=credentials('cosign-publickey')
  }
  stages {
    stage('verify the container image') {
      steps {
        sh 'cosign version'
        sh 'cosign verify --key $COSIGN_PUBLIC_KEY ghcr.io/$IMAGE_NAME:$IMAGE_VERSION'
      }
    }
  }
}
